{
    "compilerOptions": {
        "baseUrl": "",
        "rootDir": "src",
        "outDir": "lib",
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "lib"],
        "paths": {
            "anyhow": ["node_modules/anyhow/", "../api/node_modules/anyhow/"],
            "setmeup": ["node_modules/setmeup/", "../api/node_modules/setmeup/"]
        }
    },
    "typedocOptions": {
        "entryPoints": ["./src/"],
        "excludeExternals": true,
        "excludePrivate": true,
        "name": "Strautomator Core",
        "out": "docs"
    }
}
